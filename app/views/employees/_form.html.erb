<div class="row" style="background-color:white; positon:inherit; border-radius: 6px;padding: 12px 6px;">
  <div class="col s2">
</div>
<div id="col s8 center">
<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :ssn %>
    <%= form.text_field :ssn %>
  </div>

  <div class="input-field">
   <%= form.label :date_of_birth %>
   <%= form.text_field :date_of_birth, prompt: "Date of birth", class: "datepicker", :value =>
  (form.object.date_of_birth.strftime('%B %d, %Y') if form.object.date_of_birth != nil)%>
   </div>
 
  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :role %>
    <%= form.text_field :role %>
  </div>

  <div class="field">
  <label>
    <%= form.check_box :active, id:"Active" %>
    <span><%= form.label :active %></span>
  </label>
  </div>
<br>
  <div class="actions">
    <%= button_to "Create Employee", form.submit, :style => "background-color: #d147a3 ;color: white; font-size: 16px;",
 :method => :get %>
  </div>
<% end %>
</div>
<div class="col s2">
</div>
</div>
