<div class="container" style="text-align:center; position:relative; top:-70px;">

<button style="background-color: #d147a3 ;color: white; font-size: 16px;">
  <a href="https://test-1-msahmad.c9users.io/employees/new" style="text-decoration: none;color:white;">Create New Employee</a></button>
</div>

<p id="notice"><%= notice %></p>
      <hr class="my-4">
      <br>
      <br>
<p>
    <% if (!@active_employees.nil?) then %>
        <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample1" role="button" 
        style="background-color:#DDA0DD; width:250px; text-align: center; padding: 3px 24px;display: block; margin: 0 auto; border-radius: 12px;
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19); border-color:#2d2722;" 
        aria-expanded="false" aria-controls="collapseExample1">
        Active Employees
        </a>
        <br>
    </p>
    <div class="collapse" id="collapseExample1">
        <div class="card card-body1">
            <table class="table">
              <thead style="background-color:#DDA0DD;color:white;">
                <tr>
                  <th scope="col">First name</th>
                  <th scope="col">Last name</th>
                  <th scope="col">Ssn</th>
                  <th scope="col">Date of birth</th>
                  <th scope="col">Phone</th>
                  <th scope="col">Role</th>
                  <th scope="col">Active</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                  <% @active_employees.each do |employee| %>
                  <tr>
                    <td><%= employee.first_name %></td>
                    <td><%= employee.last_name %></td>
                    <td><%= employee.ssn %></td>
                    <td><%= employee.date_of_birth %></td>
                    <td><%= employee.phone %></td>
                    <td><%= employee.role %></td>
                    <td><%= employee.active %></td>
                    <td><%= link_to 'Show', employee %></td>
                    <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
                    <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                  <% end %>
              </tbody>
            </table>
        </div>
    </div>
  <% end %>
<br>
<% if (!@inactive_employees.nil?) then %>
        <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample1" role="button" 
