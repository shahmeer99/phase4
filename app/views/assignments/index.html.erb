<div class="container" style="text-align:center; position:relative; top:-70px;">
        
  
  <button style="background-color: #d147a3 ;color: white; font-size: 16px;">
  <a href="https://test-1-msahmad.c9users.io/assignments/new" style="text-decoration: none;color:white;">Create New Assignments</a></button>
</div>


<p id="notice"><%= notice %></p>
      <hr class="my-4">
      <br>
      <br>
<p>
      <% if (!@current_assignments.nil?) then %>
        <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample1" role="button" 
        style="background-color:#DDA0DD; width:250px; text-align: center; padding: 3px 24px;display: block; margin: 0 auto; border-radius: 12px;
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19); border-color:#2d2722;" 
        aria-expanded="false" aria-controls="collapseExample1">
        Current Assignments
        </a>
        <br>
    </p>
    <div class="collapse" id="collapseExample1">
        <div class="card card-body1">
            <table class="table">
              <thead style="background-color:#DDA0DD;color:white;">
                <tr>
                   <th  scope="col">Start date</th>
                    <th  scope="col">End date</th>
                    <th  scope="col">Pay level</th>
                    <th  scope="col">Store</th>
                    <th scope="col">Employee</th>
                    <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
               <% @current_assignments.each do |assignment| %>
                  <tr>
                    <td><%= assignment.start_date %></td>
                    <td><%= assignment.end_date %></td>
                    <td><%= assignment.pay_level %></td>
                    <td><%= assignment.store_id %></td>
                    <td><%= assignment.employee_id %></td>
                    <td><%= link_to 'Show', assignment %></td>
                    <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
                    <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
    </div>
<%end%>
<br>
<% if (!@past_assignments.nil?) then %>
        <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample1" role="button" 
        style="background-color:#DDA0DD; width:250px; text-align: center; padding: 3px 24px;display: block; margin: 0 auto; border-radius: 12px;
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19); border-color:#2d2722;" 
        aria-expanded="false" aria-controls="collapseExample1">
        Past Assignments
        </a>
        <br>
    </p>
    <div class="collapse" id="collapseExample1">
        <div class="card card-body1">
            <table class="table">
              <thead style="background-color:#DDA0DD;color:white;">
                <tr>
                   <th  scope="col">Start date</th>
                    <th  scope="col">End date</th>
                    <th  scope="col">Pay level</th>
                    <th  scope="col">Store</th>
                    <th scope="col">Employee</th>
                    <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
               <% @past_assignments.each do |assignment| %>
                  <tr>
                    <td><%= assignment.start_date %></td>
                    <td><%= assignment.end_date %></td>
                    <td><%= assignment.pay_level %></td>
                    <td><%= assignment.store_id %></td>
                    <td><%= assignment.employee_id %></td>
                    <td><%= link_to 'Show', assignment %></td>
                    <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
                    <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
    </div>
<%end%>
