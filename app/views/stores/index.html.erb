<div class="container" style="text-align:center; position:relative; top:-70px;">
        
    <button style="background-color: #d147a3 ;color: white; font-size: 16px;">
  <a href="https://test-1-msahmad.c9users.io/stores/new" style="text-decoration: none;color:white;">Create New Stores</a></button>
</div>


<p id="notice"><%= notice %></p>
      <hr class="my-4">
      <br>
      <br>
<p>
    <% if (!@active_stores.nil?) then %>
        <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample1" role="button" 
        style="background-color:#DDA0DD; width:200px; text-align: center; padding: 3px 24px;display: block; margin: 0 auto; border-radius: 12px;
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19); border-color:#2d2722;" 
        aria-expanded="false" aria-controls="collapseExample1">
        Active Stores
        </a>
        <br>
    </p>
    <div class="collapse" id="collapseExample1">
        <div class="card card-body1">
            <table class="table">
              <thead style="background-color:#DDA0DD;color:white;">
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Street</th>
                  <th scope="col">City</th>
                  <th scope="col">State</th>
                  <th scope="col">Zip</th>
                  <th scope="col">Phone</th>
                  <th scope="col">Latitude</th>
                  <th scope="col">Longitude</th>
                  <th scope="col">Active</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
               <% @active_stores.each do |store| %>
                  <tr>
                     <td><%= store.name %></td>
                      <td><%= store.street %></td>
                      <td><%= store.city %></td>
                      <td><%= store.state %></td>
                      <td><%= store.zip %></td>
                      <td><%= store.phone %></td>
                      <td><%= store.latitude %></td>
                      <td><%= store.longitude %></td>
                      <td><%= store.active %></td>
                      <td><%= link_to 'Show', store %></td>
                      <td><%= link_to 'Edit', edit_store_path(store) %></td>
                      <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
    </div>
<% end %>
<br>

