<div class="container" style="text-align:center; position:relative; top:-70px;">
        
  
  <button style="background-color: #d147a3 ;color: white; font-size: 16px;">
  <a href="https://test-1-msahmad.c9users.io/shifts/new" style="text-decoration: none;color:white;">Create New Shifts</a></button>
</div>


<p id="notice"><%= notice %></p>
      <hr class="my-4">
      <br>
      <br>
<p>
    <% if (!@shifts.nil?) then %>
        <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample1" role="button" 
        style="background-color:#DDA0DD; width:250px; text-align: center; padding: 3px 24px;display: block; margin: 0 auto; border-radius: 12px;
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19); border-color:#2d2722;" 
        aria-expanded="false" aria-controls="collapseExample1">
        Shifts
        </a>
        <br>
    </p>
    <div class="collapse" id="collapseExample1">
        <div class="card card-body1">
            <table class="table">
              <thead style="background-color:#DDA0DD;color:white;">
                <tr>
                   <th  scope="col">Date</th>
                    <th  scope="col">Start time</th>
                    <th  scope="col">End time</th>
                    <th  scope="col">Notes</th>
                    <th scope="col">Assignment</th>
                    <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
              <% @shifts.each do |shift| %>
                <tr>
                  <td><%= shift.date %></td>
                  <td><%= shift.start_time %></td>
                  <td><%= shift.end_time %></td>
                  <td><%= shift.notes %></td>
                  <td><%= shift.assignment %></td>
                  <td><%= link_to 'Show', shift %></td>
                  <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
                  <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
            </table>
        </div>
    </div>
  <% else %>
    <div class="container" style="text-align:center;opacity: 1;">
      <p style="text-align:center;font-size:24px;color:white;">No shifts exist</p>
    </div>
  <%end%>
<br>

