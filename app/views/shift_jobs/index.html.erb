<div class="container" style="text-align:center; position:relative; top:-70px;">

<button style="background-color: #d147a3 ;color: white; font-size: 16px;">
  <a href="https://test-1-msahmad.c9users.io/shift_jobs/new" style="text-decoration: none;color:white;">Create New Shift Jobs</a></button>
</div>

<p id="notice"><%= notice %></p>
      <hr class="my-4">
      <br>
      <br>
<p>
  <% if (!@shift_jobs.nil?) then %>
        <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample1" role="button" 
        style="background-color:#DDA0DD; width:250px; text-align: center; padding: 3px 24px;display: block; margin: 0 auto; border-radius: 12px;
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19); border-color:#2d2722;" 
        aria-expanded="false" aria-controls="collapseExample1">
        Shift Jobs
        </a>
        <br>
    </p>
    <div class="collapse" id="collapseExample1">
        <div class="card card-body1">
            <table class="table">
              <thead style="background-color:#DDA0DD;color:white;">
                <tr>
                  <th scope="col">Shift</th>
                  <th scope="col">Job</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
              <% @shift_jobs.each do |shift_job| %>
                <tr>
                  <td><%= shift_job.shift %></td>
                  <td><%= shift_job.job %></td>
                  <td><%= link_to 'Show', shift_job %></td>
                  <td><%= link_to 'Edit', edit_shift_job_path(shift_job) %></td>
                  <td><%= link_to 'Destroy', shift_job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
            </table>
        </div>
    </div>
<br>
<% else %>
    <div class="container" style="text-align:center;opacity: 1;">
      <p style="text-align:center;font-size:24px;color:white;">No shiftjobs exist</p>
    </div>
<% end %>